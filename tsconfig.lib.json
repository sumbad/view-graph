{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Strict Checks
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "module": "esnext",
    "target": "esnext",
    "allowJs": false,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "./lib",
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve"
  },
  "exclude": [
    "www",
    "tests",
    "playwright.config.ts"
  ]
}
